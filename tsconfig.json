{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "outDir": "./dist",
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "target": "ES2022",
    "module": "ESNext",
    "types": [],
    // For nodejs:
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    // "types": ["node"],
    // and npm install -D @types/node
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,
    // Recommended Options
    "strictNullChecks": true,
    "strict": false,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@embeddr/react-ui": ["./src/index.tsx"],
      "@embeddr/react-ui/*": ["../embeddr-react-ui/src/*"],
      "@embeddr/react-ui/components/*": [
        "../embeddr-react-ui/src/components/*"
      ],
      "@embeddr/react-ui/hooks": ["../embeddr-react-ui/src/hooks/index.ts"],
      "@embeddr/react-ui/hooks/*": ["../embeddr-react-ui/src/hooks/*"],
      "@embeddr/react-ui/providers": [
        "../embeddr-react-ui/src/providers/index.ts"
      ],
      "@embeddr/react-ui/providers/*": ["../embeddr-react-ui/src/providers/*"],
      "@embeddr/react-ui/ui/*": ["../embeddr-react-ui/src/ui/*"],
      "@embeddr/react-ui/context/*": ["../embeddr-react-ui/src/context/*"],
      "@embeddr/react-ui/types/*": ["../embeddr-react-ui/src/types/*"]
    }
  },
  "include": ["src", "*.ts", "*.d.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "*.config.ts",
    "tsconfig.json",
    "vite.config.ts",
    "*.test.tsx"
  ]
}
